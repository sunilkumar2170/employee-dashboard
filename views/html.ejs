<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }
    .form-container {
      width: 400px;
      margin: auto;
      border: 1px solid #ccc;
      padding: 20px;
      border-radius: 10px;
      background-color: #f2f9ff;
    }
    .form-container h2 {
      text-align: center;
      color: #007acc;
    }
    label {
      display: block;
      margin-top: 10px;
    }
    input, select {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
      box-sizing: border-box;
    }
  </style>
</head>
<body>
<div class="container mt-5">
  <h2 class="mb-4">Filter Form</h2>
  <form action="/search/" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="text" class="form-control" id="email" name="email" placeholder="Enter email">
    </div>

    <div class="mb-3">
      <label for="etype" class="form-label">Employee Type</label>
      <select name="etype" id="etype" class="form-select">
        <option value="">--Select Type--</option>
        <option value="hourly">Hourly</option>
        <option value="salaried">Salaried</option>
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
  


<div class="container mt-5">
    <h2 class="mb-4"><%= title %></h2>








    <table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Employee Type</th>
      <th>Hour</th>
      <th>Total Hour</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% if (employees.length > 0) { %>
      <% employees.forEach(function(emp) { %>
        <tr>
          <td><%= emp.name %></td>
          <td><%= emp.email %></td>
          <td><%= emp.etype %></td>
          <td><%= emp.hour %></td>
          <td><%= emp.totalhour %></td>
         
        </tr>
      <% }); %>
    <% } else { %>
      <tr>
        <td colspan="5" class="text-center">No records found</td>
      </tr>
    <% } %>
  </tbody>
</table>

  <div class="form-container">
  <h2>Employee Details Form by Sunil Kumar</h2>
  <form action="/" method="POST">
  <input type="text" name="name" placeholder="Enter Your Name">
  <input type="email" name="email" placeholder="Email Address">
  <select name="etype">
    <option value="hourly">Hourly</option>
    <option value="salaried">Salaried</option>
  </select>
  <input type="number" name="hour" placeholder="Enter Hourly Rate">
  <input type="number" name="totalhour" placeholder="Enter Total Hours">
  <button type="submit">Submit</button>
</form>

</div>

   
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
